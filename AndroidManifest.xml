<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ksj.bamft"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".BamftActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".ScheduleListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SCHEDULELIST" />
                
                <category android:name="android.intent.category.ALTERNATIVE" />
                
            </intent-filter>
            
        </activity>
        
        <activity 
            android:name=".TruckListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TRUCKLIST" />
                
                <category android:name="android.intent.category.ALTERNATIVE" />
                
            </intent-filter>
            
        </activity>
        
        <activity
            android:name=".ScheduleProfileActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SCHEDULEPROFILE" />
                
                <category android:name="android.intent.category.ALTERNATIVE" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".TruckProfileActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TRUCKPROFILE" />
                
                <category android:name="android.intent.category.ALTERNATIVE" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>