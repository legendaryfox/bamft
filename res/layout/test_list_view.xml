<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:clickable="true">
    
    <!-- ##################DIVIDER##################### -->
    
    
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/menu_item_search_nearby"
	    android:layout_width="fill_parent"
	    android:orientation="horizontal"
	    android:layout_height="wrap_content"> 
	    
		<ImageView android:id="@+id/square_icon"
		        android:layout_width="90dp"
		        android:layout_height="90dp"
		        android:layout_marginRight="6dip"
		        android:scaleType="fitCenter"
		        android:padding="4dp"
		       	android:src="@drawable/square_icon" />
		
	
	    <TextView
		    android:id="@+id/truckNameText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="4dp"
		    android:layout_toRightOf="@+id/square_icon"
		    android:text="Search Nearby"
		    android:textSize="25sp" />
	    
	    <ImageView android:id="@+id/arrow_icon"
		        android:layout_width="30dp"
		        android:layout_height="90dp"
		        android:layout_marginRight="6dip"
		        android:scaleType="fitCenter"
		        android:padding="4dp"
				android:layout_alignParentRight="true"
		       	android:src="@drawable/arrow_icon" />      	
	</RelativeLayout>
	
	<!-- ##################DIVIDER##################### -->
	
	<!-- ##################DIVIDER##################### -->
    
    
